{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "windows": {
                "command": "go",
                "args": [
                    "build",
                     "-ldflags=\\\"-X github.com/safesoftware/fmeserver-cli/cmd.appVersion=$(git rev-parse --short HEAD)\\\"",
                    "-o", 
                    "fmeserver.exe"
                ]
            },
            "linux": {
                "command": "go",
                "args": [
                    "build",
                     "-ldflags=\"-X github.com/safesoftware/fmeserver-cli/cmd.appVersion=$(git rev-parse --short HEAD)\"",
                    "-o", 
                    "fmeserver"
                ]
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
              }
        },
        {
            "label": "Build Docker Image",
            "type": "shell",
            "command": "docker build -t safesoftware/fmeserver-cli .",
            "group": {
                "kind": "build"
            }
        }
    ]
}
